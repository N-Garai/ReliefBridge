{
  "databases": [
    {
      "databaseId": "reliefbridge",
      "name": "ReliefBridge",
      "collections": [
        {
          "collectionId": "users",
          "name": "Users",
          "attributes": [
            {
              "key": "name",
              "type": "string",
              "size": 255,
              "required": true
            },
            {
              "key": "email",
              "type": "string",
              "size": 255,
              "required": true
            },
            {
              "key": "phone",
              "type": "string",
              "size": 20,
              "required": true
            },
            {
              "key": "role",
              "type": "string",
              "size": 20,
              "required": true
            },
            {
              "key": "location",
              "type": "string",
              "size": 255,
              "required": false
            },
            {
              "key": "active",
              "type": "boolean",
              "required": true
            },
            {
              "key": "created_at",
              "type": "datetime",
              "required": true
            },
            {
              "key": "last_seen",
              "type": "datetime",
              "required": true
            },
            {
              "key": "password_hash",
              "type": "string",
              "size": 255,
              "required": true
            }
          ],
          "indexes": [
            {
              "key": "email_idx",
              "type": "key",
              "attributes": ["email"],
              "orders": ["ASC"]
            }
          ]
        },
        {
          "collectionId": "help_requests",
          "name": "Help Requests",
          "attributes": [
            {
              "key": "user_id",
              "type": "string",
              "size": 255,
              "required": true
            },
            {
              "key": "user_name",
              "type": "string",
              "size": 255,
              "required": true
            },
            {
              "key": "request_type",
              "type": "string",
              "size": 50,
              "required": true
            },
            {
              "key": "description",
              "type": "string",
              "size": 1000,
              "required": true
            },
            {
              "key": "priority",
              "type": "string",
              "size": 20,
              "required": true
            },
            {
              "key": "location",
              "type": "string",
              "size": 255,
              "required": true
            },
            {
              "key": "latitude",
              "type": "double",
              "required": true
            },
            {
              "key": "longitude",
              "type": "double",
              "required": true
            },
            {
              "key": "contact_phone",
              "type": "string",
              "size": 20,
              "required": true
            },
            {
              "key": "status",
              "type": "string",
              "size": 20,
              "required": true
            },
            {
              "key": "volunteer_id",
              "type": "string",
              "size": 255,
              "required": false
            },
            {
              "key": "volunteer_name",
              "type": "string",
              "size": 255,
              "required": false
            },
            {
              "key": "created_at",
              "type": "datetime",
              "required": true
            },
            {
              "key": "updated_at",
              "type": "datetime",
              "required": true
            },
            {
              "key": "claimed_at",
              "type": "datetime",
              "required": false
            },
            {
              "key": "completed_at",
              "type": "datetime",
              "required": false
            }
          ],
          "indexes": [
            {
              "key": "status_idx",
              "type": "key",
              "attributes": ["status"],
              "orders": ["ASC"]
            },
            {
              "key": "user_id_idx",
              "type": "key",
              "attributes": ["user_id"],
              "orders": ["ASC"]
            },
            {
              "key": "volunteer_id_idx",
              "type": "key",
              "attributes": ["volunteer_id"],
              "orders": ["ASC"]
            }
          ]
        }
      ]
    }
  ]
}